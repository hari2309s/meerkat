{
  "name": "@meerkat/local-store",
  "version": "0.1.0",
  "description": "Local-first storage layer for Meerkat â€” IndexedDB-backed Yjs documents with private/shared doc split",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "yjs": "^13.0.0"
  },
  "dependencies": {
    "y-indexeddb": "^9.0.12",
    "yjs": "^13.6.18"
  },
  "devDependencies": {
    "@meerkat/crypto": "workspace:*",
    "@meerkat/types": "workspace:*",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
